{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsAppWorksAuth",
    "title": "AppWorks Authentication Schema",
    "type": "object",
    "properties": {
      "auth_type": {
        "type": "string",
        "description": "Authentication Type",
        "default": "OTDS",
        "enum": [
          "OTDS",
          "AW"
        ],
        "x-prompt": {
          "message": "Which authentication would you like to use?",
          "type": "list",
          "items": [
            { "value": "OTDS",  "label": "OTDS" },
            { "value": "AW", "label": "AppWorks" }
          ]
        }
      },
      "otds_url": {
        "type": "string",
        "description": "Please enter your OTDS authentication rest service URL. (ex: http://<< host/ip >>:<< port >>/otdsws/rest/authentication/credentials)",
        "x-prompt": "Please enter your OTDS authentication rest service URL. (Leave empty if you have selected AppWorks Authentication)"
      },
      "project": {
        "type": "string",
        "description": "The name of the project.",
        "$default": {
          "$source": "projectName"
        }
      },
      "path": {
        "type": "string",
        "format": "path",
        "description": "The path to create the service.",
        "visible": false
      }
    },
    "required": ["auth_type"]
  }