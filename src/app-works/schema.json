{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsAppWorks",
    "title": "AppWorks Schema",
    "type": "object",
    "properties": {
      "otds_url": {
        "type": "string",
        "description": "OTDS URL",
        "x-prompt": "Please enter your OTDS URL"
      },
      "gateway_url": {
        "type": "string",
        "description": "AppWorks Gateway URL",
        "x-prompt": "Please enter your AppWorks Gateway URL"
      },
      "org_dn": {
        "type": "string",
        "description": "Org DN",
        "x-prompt": "Please enter your Org DN"
      },
      "project": {
        "type": "string",
        "description": "The name of the project.",
        "$default": {
          "$source": "projectName"
        }
      },
      "path": {
        "type": "string",
        "format": "path",
        "description": "The path to create the service.",
        "visible": false
      }
    },
    "required": ["otds_url", "gateway_url", "org_dn"]
  }